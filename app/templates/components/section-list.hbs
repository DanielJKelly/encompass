<header id="section-list-header">
  <h1>Sections</h1>
  <button>{{#link-to 'sections.new' id='new-section-link'}}Create New Section{{/link-to}}</button>
  <div class="clear"></div>
</header>


<section class="sectionlist">
  <nav class="users actions listing al_vertical_stretch">
    <h2>{{currentUser.username}}'s sections</h2>
    <ul class="your-sections">
      {{#each yourSections as |section|}}
      <li>{{#link-to 'section' section classNames='section'}}{{section.name}}{{/link-to}}</li>
      {{/each}}
    </ul>

    <h2>Sections you belong to</h2>
    <ul class="listing">
      {{#each collabSections as |section|}}
      <li>{{#link-to 'section' section classNames='section'}}{{section.name}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </nav>

   <div class="listOutlet sections">
      {{outlet}}
  </div>

  <div class="clear"/>
</section>
