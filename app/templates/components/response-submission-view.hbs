<h5>Response Submission</h5>
{{#if submission}}
  <div class="problem-link-container">
  {{#if submission.answer}}
    Problem: <a {{action 'openProblem'}} class="problem-link">
      {{submission.puzzle.title}}
      <i class="fas fa-external-link-alt"></i>
    </a>
  {{else}}
    Problem: <a class='puzzle' target="_blank" href="{{submission.puzzleUrl}}">
      {{submission.puzzle.title}}
      <i class="fas fa-external-link-alt"></i>
    </a>
  {{/if}}
  </div>
  <div id="al_submission" class="al_vertical_stretch">
    <div class="submission student">
      <p>Student: {{submission.student}}</p>
    </div>
    <div class="submission short">
      {{#if submission.answer.answer}}
        Brief Summary: {{{submission.answer.answer}}}
      {{else}}
      Brief Summary: {{{submission.shortAnswer}}}
      {{/if}}
    </div>
    <div class="submission long">
      {{#if submission.answer.explanation}}
        Explanation: {{{submission.answer.explanation}}}
      {{/if}}
      {{#if submission.answer.explanationImage}}
      Additional Image: <img src="{{submission.answer.explanationImage.imageData}}" alt="">
      {{/if}}
      {{#if submission.longAnswer}}
        Explanation: {{{submission.longAnswer}}}
      {{/if}}
    </div>
    {{#if submission.uploadedFile.savedFileName}}
    <div id="submission_images">
      <a target="_blank" href="{{unbound submission.imageUrl}}">
        <img src="{{submission.imageUrl}}" alt="Login to the PoWs to see image"/>
      </a>
    </div>
    {{/if}}
  </div>
{{/if}}