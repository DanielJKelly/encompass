<div class="flex-container-full">
  <div class="flex-item-full filter-options collapse" id="filter-list-side">
    {{workspace-filter
      store=store
      onUpdate=(action "triggerFetch")
      filter=filter
      primaryFilter=primaryFilter
      adminFilterSelect=adminFilterSelect
      orgs=organizations
      }}
  </div>

  <div class="flex-item-full list-view">
    <div class="list-container">
      <h1>Workspaces</h1>
      <div class="searchbar">
        {{search-bar
        onSearch=(action "searchWorkspaces")
        showFilter=true
        searchOptions = searchOptions
        basePlaceholder="Search workspaces"
        inputValue=searchInputValue
        clearSearchResults=(action "clearSearchResults")
        selectedCriterion=searchCriterion
        }}

        {{#link-to 'workspaces.new' id="workspace-new-link" class="new-link-btn"}}
          <i class="fas fa-plus"></i>
        {{/link-to}}
      </div>
    </div>
    <div class="results-list">
      <div class="results-info">
        <div class="results-message">
          {{listResultsMessage}}
        </div>
        <div class="layout-icons" >
          {{#if showList}}
            <img src="/images/grid.svg" alt="grid" {{action 'setGrid'}}>
            <img src="/images/list-active.svg" alt="list" {{action 'setList'}}>
          {{/if}}
          {{#if showGrid}}
            <img src="/images/grid-active.svg" alt="grid" {{action 'setGrid'}}>
            <img src="/images/list.svg" alt="list" {{action 'setList'}}>
          {{/if}}
        </div>
      </div>
      <div class="results-items" id="layout-view">
        <div class="sort-bar">
          <div class="sort-bar-item mode">
            Mode <i class="fas fa-filter sort-icon"></i>
            <span class="hover-menu">
              <ul>
                {{#each modeOptions as |option|}}
                <li>
                  {{radio-filter
                    labelName=option.label
                    labelIcon=option.icon
                    inputValue=option.value
                    isChecked=option.isChecked
                    groupName="mode"
                    onClick=(action "updateMode")
                    groupValue=selectedMode}}
                </li>
                {{/each}}
              </ul>
            </span>
          </div>
          {{toggle-control
            classToAdd="sort-bar-item name"
            onUpdate=(action "updateSortCriterion")
            initialState=1
            options=sortOptions.name
            label="Name"
            parentProp=sortCriterion
            type="name"
            activeType=sortCriterion.type}}
          {{toggle-control
            classToAdd="sort-bar-item last-viewed"
            onUpdate=(action "updateSortCriterion")
            initialState=0
            options=sortOptions.lastModifiedDate
            label="Last Modified"
            type="lastModifiedDate"
            activeType=sortCriterion.type
            }}

          {{!-- <div class="sort-bar-item submissions">
            Submissions <i class="fas fa-filter sort-icon"></i>
          </div> --}}
          {{toggle-control
            classToAdd="sort-bar-item submissions"
            onUpdate=(action "updateSortCriterion")
            initialState=0
            options=sortOptions.submissions
            label="Submissions"
            type="submissions"
            activeType=sortCriterion.type
            }}
            {{toggle-control
            classToAdd="sort-bar-item owner"
            onUpdate=(action "updateSortCriterion")
            initialState=0
            options=sortOptions.owner
            label="Owner"
            parentProp=sortCriterion
            type="owner"
            activeType=sortCriterion.type}}
          {{!-- <div class="sort-bar-item owner">
            Owner <i class="fas fa-filter sort-icon"></i>
          </div> --}}
          {{toggle-control
            classToAdd="sort-bar-item editors"
            onUpdate=(action "updateSortCriterion")
            initialState=0
            options=sortOptions.editors
            label="Editors"
            type="editors"
            activeType=sortCriterion.type
            }}
          {{!-- <div class="sort-bar-item editors">
            Editors <i class="fas fa-filter sort-icon"></i>
          </div> --}}
          <div class="sort-bar-item action"></div>
          <div class="sort-bar-item more"></div>
        </div>
        {{#if showList}}
          {{workspace-list isSearching=isSearchingWorkspaces workspaces=workspaces metadata=workspacesMetadata isList=true isGrid=false moreMenuOptions=moreMenuOptions store=store toWorkspaceInfo="toWorkspaceInfo"
          }}
        {{/if}}
        {{#if showGrid}}
          {{workspace-list isSearching=isSearchingWorkspaces store=store workspaces=workspaces metadata=workspacesMetadata isList=false isGrid=true moreMenuOptions=moreMenuOptions
          toWorkspaceInfo="toWorkspaceInfo"
          }}
        {{/if}}

        {{pagination-control details=workspacesMetadata initiatePageChange=(action "initiatePageChange")}}
      </div>
    </div>
  </div>
</div>