<header class="info-header">
  <h2>Assignment Details</h2>
  <div class="clear"></div>
</header>

{{#each initialLoadErrors as |error|}}
    <p class="error-message">{{error}}</p>
{{/each}}

{{#if currentUser.isStudent}}
  {{assignment-info-student assignment=assignment problem=currentProblem section=currentSection answerList=assignmentAnswers store=store}}
{{else}}
  {{assignment-info-teacher assignment=assignment studentList=assignmentStudents assignmentAnswers=assignmentAnswers store=store section=scurrentSection problem=currentProblem toAssignments="toAssignments" linkedWorkspace=assignment.linkedWorkspace.content}}
{{/if}}









