{{#if isTokenValid}}
  <p class="success-message"> Your email address has been successfully confirmed!</p>
  <p class="info">You will be notified once an admin has authorized your account. You can also {{#link-to 'auth.login' classNames='login-link'}} log in{{/link-to}} any time to check on the status of your account.</p>
{{else}}
  {{#if invalidTokenError}}
    <p class="error-message">{{invalidTokenError}}</p>
  {{/if}}

  {{#each confirmTokenErrors as |error| }}
    <p class="error-message">{{error}}</p>
  {{/each}}
{{/if}}