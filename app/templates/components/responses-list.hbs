<header class= "{{if areNoResponses 'no-responses'}}">
  <h2 class="list-header">Select a response</h2>
  <div class="toggle-btn">
    {{#if showAllFilter}}
      <button {{action 'showAllResponses'}} class="new-link-btn {{if isShowAll 'active-filter'}}">All</button>
    {{/if}}
    {{#if showSubmitterTab}}
      <button {{action 'showSubmitterResponses'}} class="new-link-btn {{if isShowSubmitter 'active-filter'}}">Solver{{submitterCounter}}</button>
    {{/if}}
    {{#if showMentoringTab}}
      <button {{action 'showMentoringResponses'}} class="new-link-btn {{if isShowMentoring 'active-filter'}}">Mentoring {{mentoringCounter}}</button>
    {{/if}}
    {{#if showApprovingTab}}
      <button {{action 'showApprovingResponses'}} class="new-link-btn {{if isShowApproving 'active-filter'}}">Approving {{approvingCounter}}</button>
    {{/if}}
  </div>
  <div class="clear"></div>
</header>

{{#if areDisplayResponses}}
  <table border="1" width="100%">
    <thead>
      <tr class="top-row">
        <th align="left">Problem</th>
        <th align="left" style="padding-left: 55px;">Text</th>
        <th align="left">From</th>
        <th align="left">Recipient</th>
        <th align="left">Date</th>
        {{#if showStatusColumn }}
          <th align="left">Status</th>
        {{/if}}
      </tr>
    </thead>

    <tbody>
      {{#each displayResponses as |response|}}
      <tr style="border-bottom: 1px solid #d3d3d3; line-height: 50px" class="response {{if (is-unread-response response currentUser) 'unread'}}">
        <td>{{response.submission.answer.problem.title}}</td>
        <td style="padding-left: 55px;">
          {{#link-to 'responses.submission' response.submission.id (query-params responseId=response.id)}} {{short-text response.text}} {{/link-to}}
        </td>
        <td>{{response.createdBy.displayName}}</td>
        {{#if response.recipient}}
          <td>{{response.recipient.username}}</td>
        {{else}}
          <td>PoW User</td>
        {{/if}}
        <td>
          {{#link-to 'responses.submission' response.submission.id (query-params responseId=response.id)}}
          <span title="{{response.strCreateDate}}">{{format-date response.createDate "MMM Do YYYY hh:mm A"}}</span>
          {{/link-to}}
        </td>
        {{#if showStatusColumn}}
          <td>{{response-status response.status}}</td>
        {{/if}}
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="empty-message">
    <p class="notice">{{noResponsesMessage}}</p>
  </div>
{{/if}}
