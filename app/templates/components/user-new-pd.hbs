<h3>Create a New User</h3>
<article class="user">
  <table class="values rows">
    <tr>
      <th>Label</th>
      <th>Value</th>
    </tr>
    <tr>
      <td>Username <span class="required-star">*</span></td>
      <td>
        <input type="text" class="user-username" value={{username}} onblur={{action 'usernameValidate' value="target.value"}} onfocus={{action 'resetErrors'}} />
      </td>
    </tr>
    <tr>
      <td>Password <span class="required-star">*</span></td>
      <td>
        <input type="password" class="user-password" value={{password}} onblur={{action 'passwordValidate' value="target.value"}} onfocus={{action 'resetErrors'}}/>
      </td>
    </tr>
    <tr>
      <td>Name</td>
      <td>
        {{input type="text" value=name classNames='user-name'}}
      </td>
    </tr>
    <tr>
      <td>Email</td>
      <td>
        <input type="text" class="user-email" value={{email}} onblur={{action 'emailValidate' value="target.value"}} onfocus={{action 'resetErrors'}}/>
      </td>
    </tr>
    <tr>
      <td>Organization</td>
      <td>
        {{currentUser.organization.name}}
      </td>
    </tr>
    <tr>
      <td>Location</td>
      <td>
        {{input type="text" value=location classNames='user-location'}}
      </td>
    </tr>
    <tr>
      <td>Account Type <span class="required-star">*</span></td>
      <td>
        {{my-select selectedValue=selectedType prompt="Select Account Type" content=accountTypes cannotBeNull=true action=(action (mut selectedType))}}
      </td>
    </tr>
    <tr>
      <td>Authorized <span class="required-star">*</span></td>
      <td>
        {{input type="checkbox" checked=isAuthorized value=isAuthorized classNames='user-isAuth'}}
      </td>
    </tr>
  </table>

  {{#if usernameExists}}
    <p class="error-message">Username already exists</p>
  {{/if}}
  {{#if emailExistsError}}
    <p class="error-message">Email address has already been used</p>
  {{/if}}

  {{#if incorrectEmail}}
    <p class="error-message">Invalid email address</p>
  {{/if}}

  {{#if incorrectUsername}}
    <p class="error-message">Invalid username</p>
  {{/if}}

  {{#if invalidPassword}}
    <p class="error-message">Password is too short</p>
  {{/if}}

  {{#if noSpacesError}}
    <p class="error-message">Passwords cannot contain spaces</p>
  {{/if}}

  {{#if errorMessage}}
    <p class="error-message">Missing required fields</p>
  {{/if}}



    <div class="button-row">
      <button class='action_button new-user' id="new-user-btn" {{action 'newUser'}}>Create New User</button>
      <button class='action_button new-user' {{action 'cancelNew'}}>Cancel</button>
    </div>

  </article>