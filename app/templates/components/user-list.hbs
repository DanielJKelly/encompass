{{#if currentUser.isAdmin}}
<header id="user-list-header">
  <h2>{{#link-to 'users.new' id='new-user-link'}}Create New User{{/link-to}}</h2>
</header>
{{/if}}

<section>
  <fieldset>
  <p>
    Select a user from the below
  </p>
  <p class="help">
    Users are automatically created when they visit but may not be authorized.
    Authorized users are bold.
    Admin users are red.
    If you aren't authorized <a href="http://mathforum.org/cgi-bin/mailto.pl?key=92&to=the%20EnCoMPASS%20team">DROP US A NOTE</a>
  </p>
  </fieldset>
</section>

<section id="user-list-side">
  <nav class="user-list-box">
    {{#if currentUser.isAdmin}}

      <h2>Waiting for Authorization</h2>
      <ul class="listing">
        {{#each unauthUsers as |user|}}
        <li class="{{if user.isAuthorized 'is-authorized'}} {{if user.isAdmin 'is-admin'}}">{{#link-to 'user' user classNames='user'}}{{user.username}}{{/link-to}}</li>
      {{/each}}
      </ul>

      <h2>Administrators</h2>
      <ul class="listing">
        {{#each adminUsers as |user|}}
        <li class="{{if user.isAuthorized 'is-authorized'}} {{if user.isAdmin 'is-admin'}}">{{#link-to 'user' user classNames='user'}}{{user.username}}{{/link-to}}</li>
      {{/each}}
      </ul>

    <h2>Authorized</h2>
    <ul class="listing">
      {{#each authUsers as |user|}}
      <li class="{{if user.isAuthorized 'is-authorized'}} {{if user.isAdmin 'is-admin'}}">{{#link-to 'user' user classNames='user'}}{{user.username}}{{/link-to}}</li>
    {{/each}}
    </ul>


  {{/if}}

    <h2>Students</h2>
    <ul class="listing last-list">
      {{#each studentUsers as |user|}}
      <li class="{{if user.isAuthorized 'is-authorized'}} {{if user.isAdmin 'is-admin'}}">{{#link-to 'user' user classNames='user'}}{{user.username}}{{/link-to}}</li>
    {{/each}}
    </ul>

  </nav>

</section>

  <div class="listOutlet users">
    {{outlet}}
  </div>

  <div class="clear"/>

