<h3>Create a New Student</h3>
<article class="user">
  <table class="values rows">
    <tr>
      <th>Label</th>
      <th>Value</th>
    </tr>
    <tr>
      <td>Username <span class="required-star">*</span></td>
      <td>
        {{input type="text" value=username action="usernameValidate" on="key-down" classNames="user-username"}}
      </td>
    </tr>
    <tr>
      <td>Password <span class="required-star">*</span></td>
      <td>
        {{input type="password" value=password action="passwordValidate" on="key-down"  classNames="user-password"}}
      </td>
    </tr>
    <tr>
      <td>Name</td>
      <td>
        {{input type="text" value=name  classNames="user-name"}}
      </td>
    </tr>
  </table>

  {{#if usernameExists}}
    <p class="error-message">Username already exists</p>
  {{/if}}

  {{#if incorrectUsername}}
    <p class="error-message">Invalid username</p>
  {{/if}}

  {{#if invalidPassword}}
    <p class="error-message">Password is too short</p>
  {{/if}}

  {{#if noSpacesError}}
    <p class="error-message">Passwords cannot contain spaces</p>
  {{/if}}

  {{#if errorMessage}}
    <p class="error-message">Username & Password are required</p>
  {{/if}}

    <div class="button-row">
      <button class='action_button new-user' id="new-user-btn" {{action 'newUser'}}>Create New Student</button>
      <button class='action_button new-user' {{action 'cancelNew'}}>Cancel</button>
    </div>

</article>
