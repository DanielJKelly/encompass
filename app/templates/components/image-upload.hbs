<form enctype="multipart/form-data">
   <input multiple={{acceptMultiple}} onchange={{action "updateFiles"}} accept="image/png,image/jpeg,application/pdf" type="file" class="image-upload"/>

  {{#unless hideSubmit}}
    {{#if filesToBeUploaded}}
      <input type="submit" value="Upload Files" {{action "uploadImages"}}/>
    {{/if}}
  {{/unless}}
</form>
{{#if missingFilesError}}
  <p class="error-message">Please select files to upload.</p>
{{/if}}

{{#unless uploadResults}}
  {{#if showLoadingMessage}}
    <p class="loading-message">Uploading images... Thank you for your patience.</p>
  {{/if}}
{{/unless}}

{{#each uploadErrors as |error|}}
    <p class="error-message">{{error}}</p>
{{/each}}

{{#if uploadResults}}
<ul class="upload-results">
  {{#each uploadResults as |file|}}
    <li>Uploaded <a href={{file.relativePath}} target="_blank">{{file.filename}}</a> successfully!</li>
  {{/each}}
</ul>
{{/if}}