<header id="assignmentnewheader">
  <h2>Create New Assignment</h2>
  <div class="clear"></div>
</header>


  <section class="third submissions">
    <form id='newassignmentform' class='properForm'>
      <fieldset>
        <ol>
          <li>
            <label for="section">Class <span class="required-star">*</span></label>
            {{my-select cannotBeNull=fromSectionInfo selectedValue=selectedSection prompt="Select a class." content=sectionList optionLabelPath="name" action=(action (mut selectedSection))}}
            {{input required=true type="hidden" value=selectedSection}}
          </li>
          <li>
            <label for="text">Problem <span class="required-star">*</span></label>
            {{my-select isRequired=true cannotBeNull=fromProblemInfo selectedValue=selectedProblem prompt="Select a problem." content=problemList optionLabelPath="title" action=(action (mut selectedProblem))}}
            {{input required=true type="hidden" value=selectedProblem}}
          </li>
          <li>
            <label for="additionalInfo">Date Assigned <span class="required-star">*</span></label>
            {{input id="assignedDate" name="daterange" type="text" value=assignedDate required=true}}
          </li>
          <li>
            <label for="dueDate">Due Date <span class="required-star">*</span></label>
            {{input id="dueDate" name="daterange" type="text" value=dueDate required=true}}
          </li>
          <li>
            <label for="name">Assignment Name</label>
            {{input type="text" placeholder="Give your assignment a name (optional)" value=name}}
          </li>
        </ol>
      </fieldset>
      {{#if isMissingRequiredFields}}
        <p class="error-message">Please provide all required fields.</p>
      {{/if}}
    </form>
  </section>
  <div style="clear: left"></div>
  <section class="submit">
    <button class="action_button" {{action 'validate'}}>
      Create Assignment
    </button>
  </section>

  {{#if createdAssignmentError}}
    <p>{{createAssignmentError}}</p>
  {{/if}}

<script>
  $(function() {
    $('input[name="daterange"]').daterangepicker({
      singleDatePicker: true,
      showDropdowns: true,
    });
  });
</script>

