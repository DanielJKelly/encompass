<div class="card-container">
  <div class="card-title">
    <p class="card-heading">{{image.originalname}}</p>
  </div>
  <div class="card-image" style="background: url({{image.imageData}}) no-repeat scroll center">
    <div class="overlay">
      <button {{action 'expandImage'}}><i class="fas fa-expand"></i></button>
    </div>
  </div>
  <div class="card-end">
    {{selectize-input
      store=store
      inputId=selectizeInputId
      maxItems=10
      initialOptions=studentOptions
      onItemAdd=(action "updateSelectedIds")
      onItemRemove=(action "updateSelectedIds")
      labelField="username"
      searchField="username"
      valueField="id"
      model="user"
      placeholder="Search students by username"
    }}
    {{!-- {{twitter-typeahead notFound=notFoundTemplate dataList=students selectedItems=creators optionLabelPath="username"
    placeholder="Add student(s)" listName="studentPool" selectedValue=studentToAdd allowMultiple=true}} --}}
  </div>
</div>

{{#if isExpanded}}
  <div class="full-image">
    <i class="fas fa-times" {{action 'expandImage'}}></i>
    <img src="{{{image.imageData}}}" alt="">
  </div>
{{/if}}

