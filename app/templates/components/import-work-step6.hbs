<div class="import-review summary">
  {{#if isUploadingAnswer}}
    <p>Please wait, creating submissions</p>
  {{else}}
    <p class="input-label">Import Summary</p>
    {{#if uploadedAnswers}}
      <p class="success-info"><b>{{answers.length}} files</b> have successfully been imported to EnCoMPASS as submissions to <b>{{selectedProblem.title}}</b></p>
      <p class="info">You can create a workspace from these submissions {{#link-to 'workspaces.new'}}here{{/link-to}}</p>
    {{else}}
      <p class="info"><b>{{answers.length}} files</b> will be imported to EnCoMPASS as submissions to <b>{{selectedProblem.title}}</b></p>
      <p class="info">Please review Summary info on the left to make sure everything is accurate</p>
    {{/if}}
  {{/if}}
</div>

{{#if isCreatingWorkspace}}
<p>Please wait, creating workspace</p>
{{/if}}

{{#if workspaceName}}
  <div class="import-review workspace">
    <p class="input-label">Workspace to be created</p>
    <div class="workspace-import-card">
      <div class="item-card-container">
        <div class="item-card row-1">
          <div class="item-card privacy">
            <span class="privacy-icon">
              <span class="info-text-tip simptip-position-right simptip-smooth" data-tooltip={{workspaceMode}}>
                {{{public-private workspaceMode}}}
              </span>
            </span>
            <span class="date">{{format-date createDate 'L'}}</span>
          </div>
        </div>
        <div class="item-card row-2">
          <div class="item-card name">
            <span>{{workspaceName}}</span>
          </div>
        </div>
        <div class="item-card row-3">
          <div class="item-card description">
            {{workspaceOwner.username}}
          </div>
        </div>
        <div class="item-card row-4">
          <div class="item-card status">
            <ul class="workspace-stats">
              <li>
                <p class="stat-header">Submissions</p>
                <p class="stat-number">{{answers.length}}</p>
              </li>
              <li>
                <p class="stat-header">Selections</p>
                <p class="stat-number">0</p>
              </li>
              <li>
                <p class="stat-header">Comments</p>
                <p class="stat-number">0</p>
              </li>
              <li>
                <p class="stat-header">Responses</p>
                <p class="stat-number">0</p>
              </li>
              <li>
                <p class="stat-header">Folders</p>
                <p class="stat-number">{{folderSet.folders.length}}</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}


{{#if savingAssignment}}
<p>Please wait, creating assignment</p>
{{/if}}

{{#if assignmentName}}
  <div class="import-review assignment">
    <p class="input-label">Assignment to be created</p>
    <div class="content-box">
      <p class="content-line">
        <span class="content-label">Name</span><span class="content-value">{{assignmentName}}</span>
      </p>
      <p class="content-line">
        <span class="content-label">Problem</span><span class="content-value">{{selectedProblem.title}}</span>
      </p>
      <p class="content-line">
        <span class="content-label">Class</span><span class="content-value">{{selectedSection.name}}</span>
      </p>
    </div>
  </div>
{{/if}}

{{#unless shouldHideButtons}}
  <div class="nav-btn-container">
    <button class="primary-button cancel-button" {{action "back"}}>Back</button>
    <button class="primary-button" {{action "next"}}>Create</button>
  </div>
{{/unless}}