<div class="info-card">
  <div class="heading">
    Workspace Settings
    {{#if canEdit}}
    {{#unless isEditing}}
      <span class="heading-icon" {{action 'editWorkspaceInfo'}}>
        <i class="fas fa-edit"></i>
      </span>
    {{/unless}}
    {{/if}}
  </div>
  <div class="card-content">
    <div class="card-row">
      <div class="row-label">
        Name
      </div>
      <div class="row-value">
        {{#if isEditing}}
          {{input type="text" class="text-input" id="edit-name-input" value=workspace.name}}
        {{else}}
          {{workspace.name}}
        {{/if}}
      </div>
    </div>
    <div class="card-row">
      <div class="row-label">
        Owner
      </div>
      <div class="row-value">
        {{#link-to 'user' workspace.owner.username}}{{workspace.owner.username}}{{/link-to}}
      </div>
    </div>
    <div class="card-row">
      <div class="row-label">
        Privacy Setting
      </div>
      <div class="row-value">
        {{workspace.mode}}
      </div>
    </div>
    <div class="card-row">
      <div class="row-label">
        Folder Set
      </div>
      <div class="row-value">
        {{#if workspace.folderSet}}
          {{workspace.folderSet}}
        {{else}}
          None selected
        {{/if}}
      </div>
    </div>
    {{#if isEditing}}
      <div class="card-row button-row">
        <button class="primary-button cancel-button" {{action (mut isEditing null)}}>Cancel</button>
        <button class="primary-button" {{action 'checkWorkspace'}}>Save</button>
      </div>
    {{/if}}
  </div>
</div>


