    {{#if permittedToComment}}
      <a
          {{! action (action reuseComment comment)}}
          {{action reuseComment comment}}
          title="reuse this comment">
        {{#if comment.children.length}}
          {{comment.children.length}}
        {{else}}
          <i class="fas fa-plus"></i>
        {{/if}}
      </a>
  	{{/if}}
    {{#if canDelete}}
  	  <span {{action deleteComment comment}} class="delete_button"><i class="fas fa-minus-circle"></i></span>
    {{/if}}
  	<p>
      {{#if isForCurrentWorkspace}}
        {{#link-to 'workspace.submission.selection' comment.selection.submission comment.selection classNames="comment comment-text"}}
          {{comment.text}}
        {{/link-to}}
      {{else}}
      <a class="newWindow comment-text" target="_blank" href="{{comment.selection.link}}">{{comment.text}}</a>
      {{/if}}
    </p>
      <p class="meta">
        by <span class="creator">{{comment.createdBy.username}}</span>
        in <span class="workspace">{{comment.workspace.name}}</span>
      </p>
  	<span class="comment-label">
      <img src="/images/{{comment.label}}.svg" alt="{{comment.label}}">
    </span>
  	<div class="clear"></div>
